<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:id="@+id/upperLinear"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="70dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/box_closed"
        android:id="@+id/pickItemBut"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Item"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pickItemBut"
            android:id="@+id/pickItemLabel"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/moto"
            android:id="@+id/deliveringBut"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Item"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/deliveringBut"
            android:id="@+id/deliveringText"
            />
    </RelativeLayout>

</LinearLayout>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/upperLinear"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qr_pic"
        android:id="@+id/QRBut"
        android:layout_marginTop="10dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Drop item"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/QRBut"

    />




    </RelativeLayout>
</ScrollView>
    <Button
    android:id="@+id/btn_signout"
    style="@android:style/Widget.Button.Small"
    android:layout_width="65dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp"
    android:text="Sign\nOut"
    android:textAlignment="center"
    android:layout_alignParentEnd="true"
    android:background="@drawable/red_circle"
    android:textColor="@color/White"
    android:textStyle="bold"/>
</RelativeLayout>